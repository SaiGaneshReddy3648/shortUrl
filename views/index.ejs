<!doctype html>
<html lang="en">
<head>
    <meta aria-v>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"
    <meta charset="UTF-8">
    <title>shortUrl</title>
</head>
<body>
    <center>
        <h1>enter the link in form below:</h1>
        <form method="POST" action="/short">
            <label>Long Url:</label>
            <input type="text" name="longUrl" placeholder="https://example_link.com" required>
            <br>
            <br>
            <input type="submit" value="Submit">
        </form>
    
        <% if(shorturls!=null) %> 
        <table>
            <tr>
                <th>S.No</th>
                <th>ShortUrl</th>
            </tr>
            <% shorturls.forEach((shorturl,index) => { %> 
            <tr>
                <td><%= index+1 %></td>
                <td><a href="<%= shorturl.shorturl %>" target="_blank"> <%= shorturl.shorturl %> </a></td>
            </tr>
            <%}) %> 
        </table>
    </center>
</body>
</html> 